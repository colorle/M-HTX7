/* components/song-tile/index.wxss */
.item{
  display: flex;
  padding: 2rpx 0;
  align-items: center;
  background: rgba(118, 130, 182,0.15);
  border-radius: 12px;
  margin-bottom: 12rpx;
  font-size: 30rpx;
}

.cover {
  width: 100rpx;
  height: 100rpx;
  border-radius: 14rpx;
}

.content {
  flex: 1;
  margin-left: 16rpx;
}

.content .source{
  display: flex;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}



.arrow .icon{
  width: 50rpx;
  height: 50rpx;
}

