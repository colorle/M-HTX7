.block{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.block .cover{
  width: 100%;
  border-radius: 12rpx;
  background-size: cover;
}

.top{
  position: relative;
}
.block .count{
  position: absolute;
  right: 0;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0,.5);
}
.block .bottom{
  width: 100%;
  font-size: 26rpx;

  /* 显示两行 */
  white-space: normal;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
