<!--pages/music_player/music_player.wxml-->
<wxs src="../../utils/format.wxs" module="format"/>
<view class="status-bar" style="height:{{statusBarHeight}}px"></view>

<image class="bg-image" src="{{playSong.al.picUrl}}" mode="aspectFill"></image>
<view class="bg-cover"></view>

<top-nav>
  <view slot="center">
    <view class="tab">
      <view class="{{ currentPage === 0 ?'active':''}}">歌曲</view>
      <view class="divider">|</view>
      <view class="{{ currentPage === 1 ?'active':''}}">歌词</view>
    </view>
  </view>
</top-nav>


<swiper class="slider-tab" style="height: calc(100vh - 44px);" bindchange="changePage">
  <swiper-item class="music">
    <view class="cover">
      <image src="image" src="{{playSong.al.picUrl}}" mode="widthFix"></image>
    </view>
    <view class="info">
      <view class="subtitle">
        <view class="songer">{{playSong.name}}</view>
        <view class="alias">{{playSong.ar[0].name}}</view>
      </view>
    </view>
    <view class="lyric">歌词</view>
    <view class="progress">
      <slider class="slider" block-size="{{12}}"   value="{{playProgress}}" bindchange="sliderChange" bindchanging="sliderChanging" />
      <view class="time">
        <view class="current">{{ format.formatDuration(currentTime)}}</view>
        <view class="duration">{{ format.formatDuration(durationTime) }}</view>
      </view>
    </view>

    <view class="control">
      <image class="btn play-mode" src="/assets/images/player/play_order.png" />
      <image class="btn play-prev" src="/assets/images/player/play_prev.png" />
      <image class="btn player" src="/assets/images/player/play_pause.png" />
      <image class="btn play-next" src="/assets/images/player/play_next.png" />
      <image class="btn play-music" src="/assets/images/player/play_music.png" />
    </view>
  </swiper-item>
  <swiper-item>2</swiper-item>
</swiper>
 
