/* pages/music_detail/components/playlist-header/index.wxss */

.cover-header{
  position: relative;
  display: flex;
  flex-direction: column;
  height: 420rpx;
  color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.cover-header .bg-image{
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.cover-header .bg-cover{
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0,.5);
  backdrop-filter: blur(5px);
}

.album{
  width: 100%;
  display: flex;
  margin-top: 60rpx;
  padding:0 30rpx;
}

.album .image{
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}

.album .info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 220rpx;
  flex: 1;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.info .creator{
  display: flex;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.info .creator .avatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 16rpx;
}

.info .creator .nickname{
  font-size: 30rpx;
  margin-left: 20rpx;
}

.info .desc {
  width: 100%;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action {
  display: flex;
  padding: 30rpx;
  margin-top: 30rpx;
  justify-content: space-between;
}

.action .item{
  display: flex;
  align-items: center;
}

.action .item .icon{
  width: 48rpx;
  margin-right: 12rpx;
} 

.action .item .text{
  font-size: 28rpx;
}



