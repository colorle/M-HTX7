/* pages/search/index.wxss */
page{
  padding: 12rpx;
  padding-top: 54px;
}

.search-bar{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.block-header {
  height: 70rpx !important;
}
.block-header .title{
  font-weight: normal !important;
}

.hots{
  padding: 12rpx;
}

.hot-list{
  display: flex;
  flex-wrap: wrap;
}

.hot-list .tag{
  font-size: 28rpx;
  background: #f2f4f0;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  margin-top: 12rpx;
}

.hot-list .tag:first-of-type{
  color: #F0908C;
}


/* 搜索建议 */
.suggest{
  padding: 12rpx;

}

.suggest .title{
  color: #8EC3C6;
  font-size: 33rpx;
  font-weight: bold;
}

.suggest .item{
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.suggest .icon{
  width: 55rpx;
  height: 25px;
  margin-left: -12rpx;
}

.suggest .item .text{
  font-size: 29rpx;
}
